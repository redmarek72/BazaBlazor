@page "/AddEmployee"
@using BazaBlazor.Data
@inject EmployeeService objEmpService
@inject NavigationManager NavigationMenager  


<h2>Dodaj rekord</h2>
<hr />

<form>
    <div class=" row">
        <div class=" col-md-8">
            <div class=" form-group">
                <label for="Name" class="control-label">Name</label>
                <input form=" Name" class=" form-control" @bind="@objEmp.FirstName" />
            </div>
            <div class=" form-group">
                <label for="LastName" class="control-label">Name</label>
                <input form=" LastName" class=" form-control" @bind="@objEmp.LastName" />
            </div>
            <div class=" form-group">
                <label for="City" class="control-label">City</label>
                <input form=" City" class=" form-control" @bind="@objEmp.City" />
            </div>
            <div class=" form-group">
                <label for="Country" class="control-label">Country</label>
                <input form=" Country" class=" form-control" @bind="@objEmp.Country" />
            </div>
        </div>
    </div>

    <div class=" row">
        <div class=" col-md-4">
            <div class=" form-group">
                <input type="button" class=" btn btn-primary" @onclick="@CreateEmployee" value=" Save" />
                <input type="button" class=" btn btn-primary" @onclick="@Cancel" value=" Cancel" />

            </div>
        </div>

    </div>

</form>



@code {
    EmployeeInfo objEmp = new EmployeeInfo();


    protected void CreateEmployee()
    {
        objEmpService.Create(objEmp);
        NavigationMenager.NavigateTo("Employee");
    }
    void Cancel()
    {
        NavigationMenager.NavigateTo("Employee");
    }

}
